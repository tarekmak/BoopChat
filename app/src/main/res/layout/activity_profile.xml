<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/selected_user_profileImg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/profile_img"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/selected_user_username_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selected_user_profileImg"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/selected_user_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selected_user_username_label"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:textSize="18.5sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/selected_user_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selected_user_language"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:textSize="18.5sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/selected_user_send_request_Button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/selected_user_status"
            android:layout_centerHorizontal="true"
            android:text="@string/send_friend_request"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:textSize="15sp"
        />

        <Button
            android:id="@+id/decline_request_Button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/selected_user_send_request_Button"
            android:layout_centerHorizontal="true"
            android:text="@string/decline_friend_request"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/chat_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/selected_user_send_request_Button"
            android:layout_centerHorizontal="true"
            android:text="@string/chat"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:visibility="invisible"
            />
    </RelativeLayout>
</ScrollView>